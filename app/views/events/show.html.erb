<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<%= link_to 'Back', events_path %>
<form method="post" enctype="multipart/form-data" action="/regs">
  <p>
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  </p>
  <input hidden id="reg_event_id" name="reg[event_id]" value='<%= @event.id %>'>
  <input hidden id="reg_alumnus_id" name="reg[alumnus_id]" value="<%= current_alumnus.id %>">
  <input id="reg_guests" type="number" value="0" name="reg[guests]">
  <input type="submit" value="Register for this event(RSVP)">
</form>
