<form class="form-horizontal center" action="/regs"  method="post">

    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <div class="form-group">
    <label class="col-md-1 control-label" for="alumnus_roll_no">Roll no</label>
    <div class="col-md-9">
      <input id="alumnus_roll_no" class="form-control" type="number" name="alumnus[roll_no]" />
    </div>
  </div>


  <input hidden id="reg_event_id" name="reg[event_id]" value='1'>
  <input hidden id="reg_alumnus_id" name="reg[alumnus_id]" value="1">
    <div class="form-group">
      <label class="col-md-1 control-label" for="alumnus_guests">Guests</label>
      <div class="col-md-9">
        <input id="reg_guests" class="form-control" type="number" name="alumnus[guests]" />
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label" for="alumnus_name">Name</label>
      <div class="col-md-9">
        <input id="alumnus_name" class="form-control" type="text" value="" name="alumnus[name]" />
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label" for="alumnus_grad_year">Grad year</label>
      <div class="col-md-9">
        <input id="alumnus_grad_year" class="form-control" type="text" name="alumnus[grad_year]" />
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label" for="alumnus_personal_mail">Personal mail</label>
      <div class="col-md-9">
        <input id="alumnus_personal_mail" class="form-control" type="text" value="" name="alumnus[personal_mail]" />
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label" for="alumnus_college_mail">College mail</label>
      <div class="col-md-9">
        <input id="alumnus_college_mail" class="form-control" type="text" value="" name="alumnus[college_mail]" />
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label" for="alumnus_phone_no">Phone no</label>
      <div class="col-md-9">
        <input id="alumnus_phone_no" class="form-control" type="text" name="alumnus[phone_no]" />
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label" for="alumnus_company_name">Company name</label>
      <div class="col-md-9">
        <input id="alumnus_company_name" class="form-control" type="text" value="" name="alumnus[company_name]" />
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label" for="alumnus_designation">Designation</label>
      <div class="col-md-9">
        <input id="alumnus_designation" class="form-control" type="text" value="" name="alumnus[designation]" />
      </div>
    </div>


    <div class="form-group">
      <label class="col-md-1 control-label" for="alumnus_location">Location</label>
      <div class="col-md-9">
        <input id="alumnus_location" class="form-control" type="text" value="" name="alumnus[location]" />
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label" for="alumnus_linkedIn">Linkedin</label>
      <div class="col-md-9">
        <input id="alumnus_linkedIn" class="form-control" type="text" value="" name="alumnus[linkedIn]" />
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-1 control-label" for="alumnus_facebook">Facebook</label>
      <div class="col-md-9">
        <input id="alumnus_facebook" class="form-control" type="text" value="" name="alumnus[facebook]" />
      </div>
    </div>

  <div class="actions" style="text-align:center;">
    <input type="submit"  value="Update Alumnus"  />
  </div>
</form>
