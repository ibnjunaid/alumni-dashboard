<%= form_for(@alumnus, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @alumnus.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@alumnus.errors.count, "error") %> prohibited this alumnus from being saved:</h4>

      <ul>
      <% @alumnus.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :roll_no, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :roll_no, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :grad_year, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :grad_year, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :college_mail, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :college_mail, class: "form-control" %>
