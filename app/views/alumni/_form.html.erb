    <div class="col-sm-10">
      <%= f.text_field :designation, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :location, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :location, class: "form-control" %>
    </div>
  </div>
