<%= form_for(@reg, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @reg.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@reg.errors.count, "error") %> prohibited this reg from being saved:</h4>

      <ul>
      <% @reg.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
      <%= f.hidden_field :alumnus_id, class: "form-control" %>
      <%= f.hidden_field :event_id, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "No of Guests", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :guests, class: "form-control" %>
    </div>
  </div>
  <%= f.fields_for @reg.alumnus do |a| %>
    <div class="form-group">
      <%= a.label :roll_no, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= a.text_field :roll_no, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= a.label :name, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= a.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= a.label :grad_year, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= a.number_field :grad_year, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= a.label :email, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= a.text_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= a.label :college_mail, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= a.text_field :college_mail, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= a.label :phone_no, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= a.text_field :phone_no, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= a.label :company_name, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= a.text_field :company_name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= a.label :designation, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= a.text_field :designation, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= a.label :location, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= a.text_field :location, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= a.label :linkedIn, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= a.text_field :linkedIn, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= a.label :facebook, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= a.text_field :facebook, class: "form-control" %>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
